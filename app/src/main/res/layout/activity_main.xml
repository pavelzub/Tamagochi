<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:ignore="ContentDescription"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">
    <ImageView android:id="@+id/field"
               android:layout_width="1030px"
               android:layout_height="1030px"
               android:visibility="visible"
               app:layout_constraintTop_toBottomOf="@+id/borderTop"
               app:layout_constraintStart_toEndOf="@+id/borderTopRight"
               android:scaleType="centerCrop"
               android:src="@drawable/field"/>
    <View android:id="@+id/borderTop"
          android:layout_width="0dp"
          android:layout_height="10dp"
          android:background="#000000"
          android:visibility="visible"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="@+id/borderLeft"/>
    <View android:id="@+id/borderBottom"
          android:layout_width="0dp"
          android:layout_height="10dp"
          android:background="#000000"
          android:visibility="visible"
          app:layout_constraintEnd_toEndOf="@+id/borderLeft"
          app:layout_constraintTop_toBottomOf="@+id/field"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.24"/>
    <View android:id="@+id/borderTopRight"
          android:layout_width="10dp"
          android:layout_height="0dp"
          android:background="#000000"
          android:visibility="visible"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/borderTop"
          app:layout_constraintBottom_toBottomOf="@+id/field"/>
    <View android:id="@+id/borderLeft"
          android:layout_width="10dp"
          android:layout_height="0dp"
          android:background="#000000"
          android:visibility="visible"
          app:layout_constraintStart_toEndOf="@+id/field"
          app:layout_constraintTop_toBottomOf="@+id/borderTop"
          app:layout_constraintBottom_toBottomOf="@+id/field"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginBottom="50dp"
            android:onClick="btnClick"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/borderBottom" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>